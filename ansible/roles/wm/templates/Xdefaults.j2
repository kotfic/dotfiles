! Fonts
URxvt.font: {% for item in term_fonts %}xft:{{item}}:pixelsize={{ pixelsize }}:antialias=true:hinting=true,{% endfor %}

URxvt.boldFont: {% for item in term_fonts %}xft:{{item}}{% if use_bold %}:bold{% endif %}:pixelsize={{ pixelsize }}:antialias=true:hinting=true,{% endfor %}

URxvt.letterSpace: {{ term_letterspace }}
URxvt.internalBorder: {{ term_internalBorder }}

! Colors
URxvt.borderColor:  {{ background }}
URxvt.background:   [80]{{ background }}
URxvt.foreground:   {{ foreground }}

! Black
URxvt.color0:       {{ n_black }}
URxvt.color8:       {{ b_black }}

! Red
URxvt.color1:       {{ n_red }}
URxvt.color9:       {{ b_red }}

! Green
URxvt.color2:       {{ n_green }}
URxvt.color10:      {{ b_green }}

! Yellow
URxvt.color3:       {{ n_yellow }}
URxvt.color11:      {{ b_yellow }}

! Blue
URxvt.color4:       {{ n_blue }}
URxvt.color12:      {{ b_blue }}

! Magenta
URxvt.color5:       {{ n_magenta }}
URxvt.color13:      {{ b_magenta }}

! Cyan
URxvt.color6:       {{ n_cyan }}
URxvt.color14:      {{ b_cyan }}

! White
URxvt.color7:       {{ n_white }}
URxvt.color15:      {{ b_white }}


URxvt.saveLines: 12000

URxvt.scrollBar: false
URxvt.scrollstyle: rxvt

URxvt.keysym.Shift-Insert: perl:clipboard:paste
URxvt.iso14755: False

URxvt.perl-ext-common: default,clipboard,font-size,matcher

! copying
URxvt.keysym.M-c:   perl:clipboard:copy
URxvt.keysym.M-v:   perl:clipboard:paste

URxvt.clipboard.copycmd:  xsel -ib
URxvt.clipboard.pastecmd: xsel -ob

! Links
URxvt.url-launcher: /usr/bin/chromium
URxvt.matcher.button: 1

! Font size
!URxvt.keysym.C-Up:     perl:font-size:increase
!URxvt.keysym.C-Down:   perl:font-size:decrease
URxvt.keysym.C-Up:   perl:font-size:incglobal
URxvt.keysym.C-Down: perl:font-size:decglobal


URxvt.depth:                32
URxvt.loginShell:           true
